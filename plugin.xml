<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="astAdapter" name="SAFARI AST Adapter" schema="schema/astAdapter.exsd"/>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.ibm.watson.safari.xform.actionSet"
            label="AST Transformations"
            visible="true">
         <action
               class="com.ibm.watson.safari.xform.search.ASTFindReplaceAction"
               definitionId="com.ibm.watson.safari.xform.findReplace"
               id="com.ibm.watson.safari.xform.astFindReplaceAction"
               label="AST Find/Replace..."
               menubarPath="Edit/additions"
               style="push"
               toolbarPath="edit"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.ibm.watson.safari.xform.category"
            name="AST Transformation"/>
      <command
            category="com.ibm.watson.safari.xform.category"
            id="com.ibm.watson.safari.xform.findReplace"
            name="AST Find/Replace"/>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.ibm.watson.safari.xform.findReplace"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M3+M1+R"/>
   </extension>
   <extension
         point="com.ibm.watson.safari.xform.astAdapter">
         <astAdapter
            language="JikesPG"
            class="com.ibm.watson.safari.xform.pattern.matching.JikesPGASTAdapter"/>
   </extension>

   <extension
         point="org.eclipse.search.searchPages">
      <page
            canSearchEnclosingProjects="true"
            class="com.ibm.watson.safari.xform.search.ASTSearchPage"
            enabled="true"
            extensions="g:100"
            icon="icons/sample.gif"
            id="com.ibm.watson.safari.xform.searchPage"
            label="AST Search"
            showScopeSection="true"/>
   </extension>
   <extension
         point="org.eclipse.search.searchResultViewPages">
      <viewPage
            class="com.ibm.watson.safari.xform.search.ASTSearchResultPage"
            id="com.ibm.watson.safari.xform.searchResultViewPage"
            searchResultClass="com.ibm.watson.safari.xform.search.ASTSearchResult"/>
   </extension>  
</plugin>
